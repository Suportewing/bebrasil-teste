        element.classList.add("active");
        var subMenu = document.querySelector(".filters-indication");
        subMenu.style.display = 'none';
      break;
      case "/collections/todos-produtos":
        var element = document.querySelector(".produtos");
        element.classList.add("active");
        var subMenu = document.querySelector(".filters-indication");
        subMenu.style.display = 'none';
      break;
      
  }

  //para submenus
  switch(url) {
    case "/collections/blends/corpo": {
      var element = document.querySelector(".aromaterapia");
      element.classList.add("active");
      var submenuBody = document.querySelector(".corpo");
      submenuBody.setAttribute("id", "active");
      
       submenuMind.removeAttribute("id");
       submenuWoman.removeAttribute("id");
       submenuKids.removeAttribute("id");
    }
    case "/collections/blends/mente": {
      var element = document.querySelector(".aromaterapia");
      element.classList.add("active");
      var submenuMind = document.querySelector(".mente");
      submenuMind.setAttribute("id", "active");

       submenuBody.removeAttribute("id");
       submenuWoman.removeAttribute("id");
       submenuKids.removeAttribute("id");
    }
    case "/collections/blends/mulher": {
      var element = document.querySelector(".aromaterapia");
      element.classList.add("active");
      var submenuWoman = document.querySelector(".mulher");
      submenuWoman.setAttribute("id", "active");

       submenuBody.removeAttribute("id");
       submenuMind.removeAttribute("id");
       submenuKids.removeAttribute("id");
    }
    case "/collections/blends/kids": {
      var element = document.querySelector(".aromaterapia");
      element.classList.add("active");
      var submenuKids = document.querySelector(".kids");
      submenuKids.setAttribute("id", "active");

       submenuBody.removeAttribute("id");
       submenuMind.removeAttribute("id");
       submenuWoman.removeAttribute("id");
    }
  }
  
</script>

{%- style -%}
  
.filters-wrapper {
  margin-top: 30px;
}
  
.filters-category {
  display: flex;
  flex-direction: row;
  gap: 5px;
  width: fit-content;
  margin: 0 auto;
}

.filters-indication {
  display: flex;
  flex-direction: row;
  gap: 5px;
  width: fit-content;
  margin: 0 auto;
}
  .filters-wrapper #active {
    background: #00A26B;
	color: #FFFFFF;
  }

  .filters-wrapper #active::before{
    filter: brightness(0.5) invert(1) contrast(7.5);
  }

  .filters-wrapper .filters-indication .button-kids #active::before {
    background-image: url("https://cdn.shopify.com/s/files/1/0548/7306/3510/files/kids-white.svg?v=1659378252");
    filter: unset;
  }

  	.filters-wrapper button.active {
		background: #00A26B;
		color: #FFFFFF;
	}

	.filters-wrapper button {
		background: transparent;
		border: 1px solid #00A26B;
		color: #00A26B;
		border-radius: 100px;
		cursor: pointer;
		margin-right: 4px;
		margin-bottom: 4px;
		padding: 8px;
        opacity: 1;
        transition: 250ms ease-in-out;
	}

    .filters-wrapper button:hover {
      opacity: 0.90;    
    }
	.filters-category button {
		min-width: 120px;
	}

  .filters-wrapper .filter-indication-button {
    width: 80px;
    height: 80px;
  }

    .filters-wrapper .filter-indication-button::before {
    content: "";
    background: none no-repeat scroll 0 0 / contain transparent;
    height: 50px;
    width: 50px;
    margin-bottom: -10px;
    position: relative;
    display: block;
    margin-left: auto;
    margin-right: auto;
  }

.filters-wrapper .filter-indication-button[data-indication-name="corpo"]::before {
  background-image: url('https://cdn.shopify.com/s/files/1/0548/7306/3510/files/body.svg?v=1659127612');
}
  
.filters-wrapper .filter-indication-button[data-indication-name="mente"]::before {
    background-image: url('https://cdn.shopify.com/s/files/1/0548/7306/3510/files/mind.svg?v=1659127612');
}

.filters-wrapper .filter-indication-button[data-indication-name="mulher"]::before {
    background-image: url('https://cdn.shopify.com/s/files/1/0548/7306/3510/files/women.svg?v=1659127612');
}

.filters-wrapper .filter-indication-button[data-indication-name="kids"]::before {
    background-image: url('https://cdn.shopify.com/s/files/1/0548/7306/3510/files/kids.svg?v=1659127612');
}
    @media(max-width: 768px) {
    .filters-category {
      display: grid;
      grid-template-columns: 1fr 1fr;
    }

    .filters-wrapper form {
      width: fit-content;
    }
  }
{%- endstyle -%} 

